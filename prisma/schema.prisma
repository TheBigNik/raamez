generator client {
  provider = "prisma-client-js"
  engineType = "binary"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model word_list {
  id Int @id @default(autoincrement())
  word String @unique

  meanings word_meaning[]
}

model word_meaning {
  id      Int       @id @default(autoincrement())
  meaning String
  word    word_list @relation(fields: [wordId], references: [id], onDelete: Cascade)
  wordId  Int

  @@index([wordId])
}
